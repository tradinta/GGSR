rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default rule: Deny all read/write access from client SDKs.
    // Since we use the Admin SDK for all backend operations,
    // legitimate users interacting via the frontend API routes will still work.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
